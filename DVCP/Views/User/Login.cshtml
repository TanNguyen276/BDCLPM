@model DVCP.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LayoutPage2.cshtml";
}

<div class="container">
    <div class="row">+
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body " style="background-color:black" @*style="background-color: #163c6a; background-image: linear-gradient(#163c6a,#424769)"*@>

                    <h5 class="card-title text-center" style="font-family; font-weight: bolder; color: #fab817 ">ĐĂNG NHẬP</h5>
                    <div class="text-center text-danger">@ViewBag.Error</div>
                    <form class="form-signin" method="post">

                        <div class="form-label-group">
                            <label for="Username" style="font-family:; font-weight: bolder; color: #fab817 ">Tên đăng nhập </label><br />
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "" })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

                        </div>

                        <div @*class="form-label-group"*@>

                            <label for="Password" style="font-family:; font-weight: bolder; color: #fab817 ">Mật khẩu</label><br />
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group" style="font-family:; font-weight: bolder; color: #fab817">
                            @*<input type="checkbox" class="custom-control-input" id="customCheck1">*@
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "" })
                            Nhớ mật khẩu
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase button "
                                type="submit" style="background-color: #fab817; background-image: linear-gradient(#FBD85D,#fab817); color: black; border: none; bor ">
                            Đăng nhập
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
