@model DVCP.ViewModel.changepassViewModel
@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-4">
        <div class="card" style="margin-top:20px ">
            <div class="card-body register-card-body" style="background-color:black">
                <h5 class="card-title text-center" style="font-family; font-weight: bolder; color: #fab817 ">ĐỔI MẬT KHẨU</h5>
                <p class="text-danger">@ViewBag.anno</p>
                @using (Html.BeginForm())
                {
                    <div class="input-group mb-3">

                        @Html.PasswordFor(m => m.oldpassword, new { @class = "form-control", placeholder = "Nhập mật khẩu cũ" })
                        <div class="input-group-append">
                            <span class="fa fa-lock input-group-text"></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.oldpassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group mb-3">

                        @Html.PasswordFor(m => m.password, new { @class = "form-control", placeholder = "Mật khẩu mới" })
                        <div class="input-group-append">
                            <span class="fa fa-lock input-group-text"></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group mb-3">

                        @Html.PasswordFor(m => m.repassword, new { @class = "form-control", placeholder = "Nhập lại mật khẩu mới" })
                        <div class="input-group-append">
                            <span class="fa fa-lock input-group-text"></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.repassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <div class="col-6">

                        </div>
                        <!-- /.col -->
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary btn-block btn-flat"
                                    style="background-color: #fab817; background-image: linear-gradient(#FBD85D,#fab817); color:black ">
                                Đổi
                            </button>
                        </div>
                        <!-- /.col -->
                    </div>
                }

            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
    <div class="col-md-4"></div>
</div>


