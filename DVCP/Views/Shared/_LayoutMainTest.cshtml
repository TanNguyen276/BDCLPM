                                        <p>Bài viết của tôi</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/ListSeries" class="nav-link">
                                        <i class="fa fa-circle-o nav-icon text-info"></i>
                                        <p>Quản lý Series</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/ListTags" class="nav-link">
                                        <i class="fa fa-circle-o nav-icon text-primary"></i>
                                        <p>Quản lý thể loại</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fa fa-user-circle"></i>
                                @*<p>
                                    Người dùng
                                    <i class="fa fa-angle-left right"></i>
                                </p>*@
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/User/ChangePass" class="nav-link">
                                        <i class="fa fa-circle-o nav-icon text-danger"></i>
                                        <p>Đổi mật khẩu</p>
                                    </a>
                                </li>
                                @{ if (User.IsInRole("admin"))
                                    {
                                        <li class="nav-item">
                                            <a href="/User/UserManager" class="nav-link">
                                                <i class="fa fa-circle-o nav-icon text-success"></i>
                                                <p>Quản lý người dùng</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="/User/createUser" class="nav-link">
