            <ul class="main-menu2 link" id="main-menu">
                <li><a href="/">TRANG CHỦ</a></li>
                <li class="drop-down">
                    <a href="/trieu-dai">DANH MỤC<i class="fa fa-caret-down"></i></a>
                    <ul class="drop-down-menu drop-down-inner">
                        @foreach (var i in data.GetEnumShowList().Take(11))
                        {
                            <li><a href="/trieu-dai/@i.slug-@i.value">@i.showname</a></li>
                        }
                        <li><a href="/trieu-dai/">XEM TẤT CẢ</a></li>
                    </ul>
                </li>
                <li class="drop-down">
